---
interface SocialLink {
  platform: string;
  url: string;
  icon: string;
}

interface Props {
  companyName?: string;
  tagline?: string;
  socialLinks?: SocialLink[];
}

const currentYear = new Date().getFullYear();
const {
  companyName = 'Company Name',
  tagline = 'Making great things happen.',
  socialLinks = [],
} = Astro.props;
---

<footer class="bg-primary border-t border-secondary-light/20">
  <div class="container-wide py-12">
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Brand column -->
      <div class="lg:col-span-2">
        <h3 class="text-xl font-bold mb-2">{companyName}</h3>
        <p class="text-text-muted mb-4 max-w-md">{tagline}</p>

        <!-- Social links -->
        {socialLinks.length > 0 && (
          <div class="flex gap-4">
            {socialLinks.map((link) => (
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-text-muted hover:text-accent transition-colors"
                aria-label={link.platform}
              >
                <span class="text-xl">{link.icon}</span>
              </a>
            ))}
          </div>
        )}
      </div>

      <!-- Quick links -->
      <div>
        <h4 class="font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          <li><a href="#" class="text-text-muted hover:text-accent">Home</a></li>
          <li><a href="#about" class="text-text-muted hover:text-accent">About</a></li>
          <li><a href="#services" class="text-text-muted hover:text-accent">Services</a></li>
          <li><a href="#contact" class="text-text-muted hover:text-accent">Contact</a></li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-semibold mb-4">Contact</h4>
        <ul class="space-y-2 text-text-muted">
          <li>hello@example.com</li>
          <li>+1 (555) 123-4567</li>
          <li>123 Main Street</li>
          <li>City, State 12345</li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-secondary-light/20 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-text-muted text-sm">
        &copy; {currentYear} {companyName}. All rights reserved.
      </p>
      <div class="flex gap-6 text-sm">
        <a href="/privacy" class="text-text-muted hover:text-accent">Privacy Policy</a>
        <a href="/terms" class="text-text-muted hover:text-accent">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>
