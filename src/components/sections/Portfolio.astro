---
interface PortfolioItem {
  image: string;
  title: string;
  category: string;
  link?: string;
}

interface Props {
  heading?: string;
  subheading?: string;
  items: PortfolioItem[];
}

const {
  heading = 'Our Work',
  subheading = 'Projects we are proud of',
  items,
} = Astro.props;
---

<section class="section bg-surface">
  <div class="container-wide">
    <!-- Section header -->
    <div class="text-center max-w-2xl mx-auto mb-16">
      <h2 class="animate-on-scroll mb-4">{heading}</h2>
      <p class="animate-on-scroll animate-delay-100 text-text-muted text-lg">
        {subheading}
      </p>
    </div>

    <!-- Portfolio grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {items.map((item, index) => (
        <a
          href={item.link || '#'}
          class={`animate-on-scroll animate-delay-${Math.min((index + 1) * 100, 500)} group relative aspect-[4/3] rounded-xl overflow-hidden`}
        >
          <!-- Image -->
          <img
            src={item.image}
            alt={item.title}
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
            loading="lazy"
          />

          <!-- Overlay -->
          <div class="absolute inset-0 bg-gradient-to-t from-primary/90 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-6">
            <span class="text-accent text-sm font-medium mb-1">
              {item.category}
            </span>
            <h3 class="text-xl font-semibold">{item.title}</h3>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
