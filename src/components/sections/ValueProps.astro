---
interface ValueProp {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  heading?: string;
  subheading?: string;
  items: ValueProp[];
}

const {
  heading = 'Why Choose Us',
  subheading = 'Everything you need to succeed',
  items,
} = Astro.props;
---

<section class="section">
  <div class="container-wide">
    <!-- Section header -->
    <div class="text-center max-w-2xl mx-auto mb-16">
      <h2 class="animate-on-scroll mb-4">{heading}</h2>
      <p class="animate-on-scroll animate-delay-100 text-text-muted text-lg">
        {subheading}
      </p>
    </div>

    <!-- Value props grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {items.map((item, index) => (
        <div
          class={`animate-on-scroll animate-delay-${Math.min((index + 1) * 100, 500)} card hover:border-accent/30 transition-colors`}
        >
          <!-- Icon -->
          <div class="text-4xl mb-4">{item.icon}</div>

          <!-- Title -->
          <h3 class="text-xl font-semibold mb-2">{item.title}</h3>

          <!-- Description -->
          <p class="text-text-muted">{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
